import React, { useContext } from "react";
import { LoginContext } from "./base";

export const useGetToken = (): string | null | undefined => {
  const context = useContext(LoginContext);
  const { token } = context;
  return token;
};

export const useSetToken = (): React.Dispatch<React.SetStateAction<string | null | undefined>> => {
  const context = useContext(LoginContext);
  const { setToken } = context;
  return setToken;
};

export const useGetCpf = (): string | null | undefined => {
  const context = useContext(LoginContext);
  const { cpf } = context;
  return cpf;
};

export const useSetCpf = (): React.Dispatch<React.SetStateAction<string | null | undefined>> => {
  const context = useContext(LoginContext);
  const { setCpf } = context;
  return setCpf;
};

export const useLogout = () => {
  const context = useContext(LoginContext);
  const { setCpf, setToken } = context;
  const logout = () => {
    localStorage.removeItem("");
    setCpf(null);
    setToken(null);
  };
  return logout;
};
